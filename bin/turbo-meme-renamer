#!/opt/nodejs/6/bin/node
var meme = require('../index.js'),
    opts = require('nopt')({
        write: Boolean,
        color: Boolean,
        warn: Boolean
    }),
    files = opts.argv.remain;
if (!files || !files.length) {
    console.error('--write --color --warn ...files');
    return process.exit(-1);
}
meme.configure(opts);
meme.process(files);
